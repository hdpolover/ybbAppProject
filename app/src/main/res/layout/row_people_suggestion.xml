<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="140dp"
        android:layout_height="210dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:contentPadding="5dp"
        android:layout_centerInParent="true"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/cardview_light_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/profileImageIv"
                android:src="@drawable/ic_undraw_profile_pic"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Canada"
                android:layout_below="@+id/profileImageIv"
                android:id="@+id/profileNameTv"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:autoSizeTextType="uniform"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="New user"
                android:layout_below="@+id/profileNameTv"
                android:id="@+id/userJobTv"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textColor="#808080"
                android:autoSizeTextType="uniform"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/followBtn"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_below="@id/userJobTv"
                app:rippleColor="@color/primaryColor"
                android:gravity="center"
                android:text="Follow"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
