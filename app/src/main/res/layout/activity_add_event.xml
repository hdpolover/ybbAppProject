<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEventActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/eventImg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_add_image1"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@id/eventImg"
            android:id="@+id/eventTitle"
            style="@style/parent">

            <EditText
                android:id="@+id/titleEt"
                style="@style/modifiedEditText"
                android:layout_height="49dp"
                android:hint="Title"
                android:maxLines="1"
                android:textColor="@color/primaryTextColor" />
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:id="@+id/eventFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleEt"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="From            : "
                android:paddingRight="10dp"/>

            <EditText
                android:id="@+id/eventDateFrom"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:hint="Date"/>

            <EditText
                android:id="@+id/eventTimeFrom"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:layout_marginTop="15dp"
                android:hint="Time" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventFrom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="To                 : "
                android:paddingRight="10dp"/>

            <EditText
                android:id="@+id/eventDateTo"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:hint="Date"/>

            <EditText
                android:id="@+id/eventTimeTo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:layout_marginTop="15dp"
                android:hint="Time" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Category     :"
                android:paddingRight="20dp"/>

            <Spinner
                android:id="@+id/eventCatSpin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/eventLocation"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            style="@style/parent">

            <EditText
                android:id="@+id/eventLocEt"
                style="@style/modifiedEditText"
                android:hint="Location"
                android:inputType="text"
                android:textColor="@color/primaryTextColor" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/eventDesc"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            style="@style/parent">

            <EditText
                android:id="@+id/descEt"
                style="@style/modifiedEditText"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:textColor="@color/primaryTextColor" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</LinearLayout>