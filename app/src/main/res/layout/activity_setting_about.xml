<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingAboutActivity"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/appNameTv"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Youth Break the Boundaries (YBB)"
            android:textSize="25sp"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/appVersionTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Versi 0.0.0"
            android:textSize="18sp"/>

        <ImageView
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/ybb_black_full"/>

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="&#169; 2020 Youth Break the Boundaries Foundation"/>

    </LinearLayout>

</RelativeLayout>